package com.bootcamp.week03;

import java.util.Set;
import java.util.HashSet;

class SetCalculator
{
    public static void main(String[] args)
    {
        Set<Integer> set1 = new HashSet<>();
        set1.add(4);
        set1.add(7);
        set1.add(14);
        set1.add(67);
        System.out.println("Set 1 :" + set1);

        Set<Integer> set2 = new HashSet<>();
        set2.add(64);
        set2.add(37);
        set2.add(14);
        set2.add(67);
        System.out.println("Set 2 :" + set2);

        Set<Integer> union = new HashSet<>(set1);
        union.addAll(set2);
        System.out.println("Union of sets :" + union);

        Set<Integer> intersection = new HashSet<>(set1);
        intersection.retainAll(set2);
        System.out.println("Intersection of sets :" + intersection);

        Set<Integer> difference = new HashSet<>(set1);
        difference.removeAll(intersection);
        System.out.println("Difference of sets  (Set 1 - Set 2) :" + difference);

        Set<Integer> difference1 = new HashSet<>(set2);
        difference1.removeAll(intersection);
        System.out.println("Difference of sets  (Set 2 - Set 1) :" + difference1);
    }
}
